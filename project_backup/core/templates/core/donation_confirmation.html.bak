{% extends 'core/base.html' %}
{% load static %}

{% block title %}Confirm Your Donation{% endblock %}

{% block content %}
<div class="container py-5">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h2 class="my-2"><i class="fas fa-credit-card me-2"></i>Confirm Your Donation</h2>
                </div>
                <div class="card-body">
                    <div class="py-4">
                        {% if payment %}
                            <div class="alert alert-info my-4">
                                <p class="lead mb-0">
                                    You are about to donate <strong>${{ payment.total }}</strong> to support Discuss.
                                </p>
                            </div>
                            
                            <div class="card mb-4">
                                <div class="card-header bg-light">
                                    <h5 class="mb-0">Donation Details</h5>
                                </div>
                                <div class="card-body">
                                    <div class="row mb-3">
                                        <div class="col-md-6">
                                            <strong>Amount:</strong>
                                        </div>
                                        <div class="col-md-6">
                                            ${{ payment.total }}
                                        </div>
                                    </div>
                                    <div class="row mb-3">
                                        <div class="col-md-6">
                                            <strong>Donation Type:</strong>
                                        </div>
                                        <div class="col-md-6">
                                            {{ payment.get_donation_type_display }}
                                        </div>
                                    </div>
                                    {% if payment.description %}
                                    <div class="row mb-3">
                                        <div class="col-md-6">
                                            <strong>Message:</strong>
                                        </div>
                                        <div class="col-md-6">
                                            {{ payment.description }}
                                        </div>
                                    </div>
                                    {% endif %}
                                </div>
                            </div>
                            
                            <form method="post" class="mb-4">
                                {% csrf_token %}
                                <div class="mb-4">
                                    <h5>Select Payment Method</h5>
                                    <div class="list-group">
                                        <label class="list-group-item">
                                            <input class="form-check-input me-1" type="radio" name="payment_variant" value="paypal" checked>
                                            Pay with PayPal
                                        </label>
                                        <label class="list-group-item">
                                            <input class="form-check-input me-1" type="radio" name="payment_variant" value="stripe">
                                            Pay with Credit/Debit Card
                                        </label>
                                    </div>
                                </div>
                                
                                <div class="d-grid gap-2">
                                    <button type="submit" class="btn btn-primary btn-lg">
                                        <i class="fas fa-lock me-1"></i> Proceed to Payment
                                    </button>
                                </div>
                            </form>
                            
                            <div class="text-center mt-3">
                                <a href="{% url 'donate' %}" class="btn btn-outline-secondary">
                                    <i class="fas fa-arrow-left me-1"></i> Change Donation
                                </a>
                            </div>
                        {% else %}
                            <div class="alert alert-warning">
                                <p>No donation in progress. Please start a new donation.</p>
                            </div>
                            <div class="text-center">
                                <a href="{% url 'donate' %}" class="btn btn-primary">
                                    <i class="fas fa-hand-holding-heart me-1"></i> Make a Donation
                                </a>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
